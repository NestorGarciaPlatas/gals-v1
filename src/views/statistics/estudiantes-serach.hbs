<p class="saltos p-1"></p>
<div class="col-md-8 mx-auto">    
    <div class="card">
        <div class="card-header text-center">
            <h3>Busqueda estudiantes</h3>
        </div>
        <div class="card-body">
            <form action="/searchinfo" method="POST">
                <input type="hidden" name="_method" value="PUT">
                
                <div class="row mb-4">
                    <div class="col-md-6">
                    <label for="campo1" class="form-label">Alumnos</label>
                    <select id="campo1" name="campo1" class="form-select">
                        <option value="Now">Actuales</option>
                        <option value="Old">Antiguos</option>
                    </select>
                    </div>
                    <div class="col-md-6">
                    <label for="campo2" class="form-label">Penalizaciones</label>
                    <select id="campo2" name="campo2" class="form-select">
                        <option value="Penalizado">Penalizado</option>
                        <option value="Sinpenalizar">Sin Penalizar</option>
                        <option value="vacio">No rellenar</option>
                    </select>
                    </div>
                    
                </div>
                <div class="row mb-4">
                    <div class="col-md-6">
                      <label for="campo2" class="form-label">Curso</label>
                      <select id="course" name="course" class="form-select" required>
                          <option value="">Selecciona una opción</option>
                          <option>1ESO</option>
                          <option>2ESO</option>
                          <option>3ESO</option>
                          <option>4ESO</option>
                      </select>
                    </div>
                  <div class="col-md-6">
                    <label for="campo2" class="form-label">Año</label>
                    <input type="number" id="campo3" name="campo3" class="form-control" min="2015" max="2099">
                  </div>
                </div>         
                <div class="form-group p-1">
                    <button class="btn btn-primary btn-block" type="submit">
                        Save
                    </button>
                </div>
            </form>
        </div>
    </div>
</div>
