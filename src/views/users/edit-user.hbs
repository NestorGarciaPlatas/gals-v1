<div class="col-md-4 mx-auto">    
    <div class="card">
        <div class="card-header">
            <h3>Editar Usuario</h3>
        </div>
        <div class="card-body">
            <form action="/users/edit-user/{{user._id}}?_method=PUT" method="POST">
                <input type="hidden" name="_method" value="PUT">
                <div class="form-group p-1">
                    <input type="text" name="name" class="form-control" placeholder="Name" value="{{user.name}}">
                </div>
                <div class="form-group p-1">
                    <input type="text" name="email" class="form-control" placeholder="Email" value="{{user.email}}">
                    <!--<textarea name="description" class="form-control" placeholder="Description"></textarea>-->
                </div>
                <div class="form-group p-1">
                    <input type="text" name="role" class="form-control" placeholder="Role" value="{{user.role}}">
                </div>
                <div class="form-group p-1">
                    <input type="text" name="course" class="form-control" placeholder="Course" value="{{user.course}}">                    
                </div>
                <!--<div class="form-group p-1">
                    <input type="text" name="car" class="form-control" placeholder="Car" value="{{user.car}}">
                </div>-->           
                <div class="form-group p-1">
                    <button class="btn btn-primary btn-block" type="submit">
                        Save
                    </button>
                </div>
            </form>
        </div>
    </div>
</div>