<div class="col-md-4 mx-auto">    
    <div class="card">
        <div class="card-header">
            <h3>Editar User</h3>
        </div>
        <div class="card-body">
            <form action="/users/edit-user/{{user._id}}?_method=PUT" method="POST">
                <input type="hidden" name="_method" value="PUT">
                <div class="form-group p-1">
                    <input type="text" name="name" class="form-control" placeholder="Name" value="{{user.name}}">
                </div>
                <div class="form-group p-1">
                    <input type="text" name="email" class="form-control" placeholder="Email" value="{{user.email}}">
                    <!--<textarea name="description" class="form-control" placeholder="Description"></textarea>-->
                </div>
                <div class="form-group p-1">
                    <input type="text" name="role" class="form-control" placeholder="Role" value="{{user.role}}">
                </div>
                <div class="form-group p-1">
                    <input type="text" name="course" class="form-control" placeholder="Course" value="{{user.course}}">                    
                </div>
                <!--<div class="form-group p-1">
                    <input type="text" name="car" class="form-control" placeholder="Car" value="{{user.car}}">
                </div>-->           
                <div class="form-group p-1">
                    <button class="btn btn-primary btn-block" type="submit">
                        Save
                    </button>
                </div>
            </form>
        </div>
    </div>
</div>
<div class="row">
    <h1>Purchased Books</h1>
    {{#each books}}
        <div class="col-md-3 p-2">
            <div class="card">
                <img src="{{path}}" class="card-img-top p-2" height="160px" style="max-width:225px;max-height:160px">
                <div class="card-body">
                    <h4 class="card-title d-flex justify-content-between align-items-center">
                        {{title}} 
                    </h4>
                    <p>{{isbn}}</p>
                    <p>{{editorial}}</p>                    
                    <p>{{course}}</p>
                    <p>{{demand}}</p>
                    <p align="center">
                        <form action="/books/orderdelete/{{_id}}?_method=PUT" method="POST" style="display:inline">
                            <input type="hidden" name="_method" value="PUT">                        
                            <button class="btn btn-danger btn-block btn-sm" type="submit" >                                
                                Delete
                            </button>
                        </form>                        
                    </p>        
                </div>
            </div>
        </div> 
    {{/each}}
</div>