<div class="row">
    <div class="col-md-4 mx-auto">
        <div class="card">
            <div class="card-header">
                <h3 class="text-center">Registro de Cuenta</h3>
            </div>
            <div class="card-body">
                <form action="/users/signup" method="post">
                    <div class="form-group p-1">
                        <input type="text" class="form-control" name="name" placeholder="Nombre" value="{{name}}">
                    </div>
                    <div class="form-group p-1">
                        <input type="email" class="form-control" name="email" placeholder="Email" value="{{email}}">
                    </div>
                    <div class="form-group p-1">
                        <select class="form-select" name="course">
                            <option>Seleciona el curso:</option>
                            <option>1ESO</option>
                            <option>2ESO</option>
                            <option>3ESO</option>
                            <option>4ESO</option>                            
                        </select>
                    </div>
                    <div class="form-group p-1">
                        <input type="password" class="form-control" name="password" placeholder="Contraseña"
                            value="{{password}}">
                    </div>
                    <div class="form-group p-1">
                        <input type="password" class="form-control" name="confirm_password" placeholder="Contraseña"
                            value="{{confirm_password}}">
                    </div>
                    <div class="form-group p-1">
                        <button type="submit" class="btn btn-primary btn-block">
                            Registrarse
                        </button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>