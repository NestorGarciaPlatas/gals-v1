<div class="row">
    {{#each users}}
        <div class="col-md-3">
            <div class="card">
                <div class="card-body">
                    <h4 class="card-title d-flex justify-content-between align-items-center">
                        {{name}} <a href="/notes/edit/{{_id}}"><i class="fas fa-edit"></i></a>
                    </h4>
                    <p>{{email}}</p>
                    <p>{{role}}</p>
                    <p>{{course}}</p>
                    <p>{{penalty}}</p>
                    <form action="/notes/delete/{{_id}}?_method=DELETE" method="post">
                        <input type="hidden" name="_method" value="DELETE">
                        <button class="btn btn-danger btn-block btn-sm" type="submit">
                            Delete
                        </button>
                    </form>
                </div>
            </div>
        </div>
    {{else}}
        <div class="card , mx-auto">
            <div class="card-body">
                <h1>Hello</h1>
                <p class="lead">There are not notes yet.</p>
                <a href="/notes/add" class="btn btn-success btn-block"> Creat one!</a>
            </div>
        </div>    
    {{/each}}
</div>