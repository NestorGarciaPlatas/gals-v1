<div class="row">
    <h1>My donations</h1>
    {{#each books}}
        <div class="col-md-3 p-2">
            <div class="card">
                <div class="card-body">
                    <h4 class="card-title d-flex justify-content-between align-items-center">
                        {{title}} 
                    </h4>
                    <p>{{isbn}}</p>                    
                    <p>{{course}}</p>
                    <p>{{demand}}</p>
                    <p align="center">
                        <form action="/books/donationdelete/{{_id}}?_method=PUT" method="POST" style="display:inline">
                            <input type="hidden" name="_method" value="PUT">                        
                            <button class="btn btn-danger btn-block btn-sm" type="submit" >                                
                                Delete
                            </button>
                        </form>                        
                    </p>        
                </div>
            </div>
        </div>
    {{else}}
        <div class="card , mx-auto">
            <div class="card-body">
                <h1>Hello</h1>
                <p class="lead">There are not books yet.</p>                
            </div>
        </div>    
    {{/each}}
</div>