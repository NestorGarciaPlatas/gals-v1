<div class="col-md-4 mx-auto">    
    <div class="card">
        <div class="card-header">
            <h3>Editar Book</h3>
        </div>
        <div class="card-body">
            <form action="/books/edit-book/{{book._id}}?_method=PUT" method="POST">
                <input type="hidden" name="_method" value="PUT">
                <div class="form-group p-1">
                    <label for="fname">Title:</label><br>
                    <input type="text" name="title" class="form-control" placeholder="Title" value="{{book.title}}">
                </div>
                <div class="form-group p-1">
                    <label for="fname">Isbn:</label><br>
                    <input type="text" name="isbn" class="form-control" placeholder="Isbn" value="{{book.isbn}}">
                    <!--<textarea name="description" class="form-control" placeholder="Description"></textarea>-->
                </div>
                <div class="form-group p-1">
                    <label for="fname">Stock:</label><br>
                    <input type="number" name="stock" class="form-control" placeholder="Stock" value="{{book.stock}}">
                </div>
                <div class="form-group p-1">
                    <label for="fname">Course:</label><br>
                    <input type="text" name="course" class="form-control" placeholder="Course" value="{{book.course}}">                    
                </div>
                <div class="form-group p-1">
                    <label for="fname">Demand:</label><br>
                    <input type="number" name="demand" class="form-control" placeholder="Demand" value="{{book.demand}}">
                </div>                
                <div class="form-group p-1">
                    <button class="btn btn-primary btn-block" type="submit">
                        Save
                    </button>
                </div>
            </form>
        </div>
    </div>
</div>