<div class="row">
    {{#each books}}
        <div class="col-md-3">
            <div class="card">
                <div class="card-body">
                    <h4 class="card-title d-flex justify-content-between align-items-center">
                        {{title}} 
                    </h4>
                    <p>{{isbn}}</p>                    
                    <p>{{course}}</p>
                    <p>{{demand}}</p>
                    
                </div>
            </div>
        </div>
    {{else}}
        <div class="card , mx-auto">
            <div class="card-body">
                <h1>Hello</h1>
                <p class="lead">There are not books yet.</p>                
            </div>
        </div>    
    {{/each}}
</div>