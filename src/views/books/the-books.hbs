    <h1>All Books</h1> 
    {{#each books}}
        <div class="col-md-3 p-2">
            <div class="card">
                <div class="card-body">
                    <h4 class="card-title d-flex justify-content-between align-items-center">
                        {{title}} 
                    </h4>
                    <p>{{isbn}}</p>                    
                    <p>{{course}}</p>
                    <p>{{demand}}</p>
