<h1>Subscribtion page.</h1>
<div class="row">
    {{#each books}}
    <div class="col-md-3 p-2">
        <div class="card">
            <img src="{{path}}" class="card-img-top p-2" height="160px" style="max-width:225px;max-height:160px">
            <div class="card-body">
                <h4 class="card-title d-flex justify-content-between align-items-center">
                    {{title}}
                </h4>
                <p>{{isbn}}</p>
                <p>{{editorial}}</p>
                <p>{{course}}</p>
                <p>{{demand}}</p>
                <p align="center">
                
                </p>
            </div>
        </div>
    </div>
    {{else}}
        {{#if sub}}
        <div class="card , mx-auto">
            <div class="card-body">
                <h1>Waitting admin permision.</h1>
            </div>
        </div>
        {{else}}
        <div class="card , mx-auto">
            <div class="card-body">
                <h1>You are not subscribed yet.</h1>
                <form action="/books/subscribe" method="POST" style="display:inline">
                        
                        <button class="btn btn-primary " type="submit">
                            Sunscribe
                        </button>
                </form>
            </div>
        </div>
        {{/if}}
        
    {{/each}}
</div>