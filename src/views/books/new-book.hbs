<div class="col-md-5 mx-auto">
    <div class="card">
        <div class="card-header">
            <h3>New Book</h3>
        </div>
        <div class="card-body">
            <form action="/books/new-book" method="POST" enctype="multipart/form-data">
                <div class="form-group p-1">
                    <input type="text" name="title" class="form-control" placeholder="Title" autofocus>
                </div>
                <div class="form-group p-1">
                    <input type="text" name="isbn" class="form-control" placeholder="Isbn" autofocus>
                    <!--<textarea name="description" class="form-control" placeholder="Description"></textarea>-->
                </div>
                <div class="form-group p-1">
                    <input type="text" name="editorial" class="form-control" placeholder="Editorial" autofocus>
                    <!--<textarea name="description" class="form-control" placeholder="Description"></textarea>-->
                </div>
                <div class="form-group p-1">
                    <input type="number" name="stock" class="form-control" placeholder="Stock" autofocus>
                </div>
                <div class="form-group p-1">
                    <select class="form-control" name="course">
                        <option>Select the course of the book:</option>
                        <option>1ESO</option>
                        <option>2ESO</option>
                        <option>3ESO</option>
                        <option>4ESO</option>
                    </select>
                </div>
                <div class="form-group p-1">
                    <input type="number" name="demand" class="form-control" placeholder="Demand" autofocus>
                </div>
                <div class="form-group p-1">
                    <input type="number" step="0.01" name="penalizacion" class="form-control" placeholder="Penalization" autofocus>
                </div>
                <div class="form-group p-1">
                    <label for="formFile" class="form-label">Select the image of the book</label>
                    <input class="form-control" type="file" name="image" id="formFile">
                </div>                
                <div class="form-group p-1">
                    <button class="btn btn-primary btn-block" type="submit">
                        Save
                    </button>
                </div>
            </form>
        </div>
    </div>
</div>